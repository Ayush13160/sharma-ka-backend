# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Session Configuration
SESSION_TTL_MINUTES=30

# File Upload
MAX_FILE_SIZE_MB=10

# LLM Configuration (Optional - for AI explanations)
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# Database (ChromaDB is in-memory by default)
CHROMA_PERSIST_DIR=./chroma_db

# Logging
LOG_LEVEL=INFO
